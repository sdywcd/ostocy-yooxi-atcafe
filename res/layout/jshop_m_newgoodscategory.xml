<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    android:orientation="horizontal"
    android:weightSum="1.0" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.32"
        android:background="@color/dark_blue"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="116dp"
            android:src="@drawable/logotitle"
            android:background="@color/dark_blue" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@color/cobalt_blue"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/seatnumbg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    
                    android:background="@drawable/ovalfortable"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView
                        android:id="@+id/seatnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A6"
                        android:textColor="@color/cobalt_blue"
                        android:textSize="36dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/feetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/seatnumbg"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="-30dp"
                    android:text="目前消费" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/feetitle"
                    android:layout_below="@+id/feetitle"
                    android:textSize="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="-30dp"
                    android:textColor="@color/yellowhola"
                    android:text="￥56" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@color/dark_blue"
                android:orientation="vertical"
                android:weightSum="1.0" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grass_green" 
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView 
                        android:text="点餐\nOrder Dishes"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"/>

                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/red_pink"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                  
                    <TextView 
                        android:id="@+id/setseat"
                        android:text="就座\nHave a seat "
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"/>
                     
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="@color/khaki"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                    
                     <TextView 
                        android:text="计算器\ncalculator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"/>
                                          
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>

        <TextView
            android:gravity="right"
            android:text="￥56"
            android:layout_width="match_parent"
            android:layout_height="20dp" 
            android:textSize="18dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.01"
        android:background="@color/deep_blue" >
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.67"
        android:background="@color/green"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:background="@color/white_grey" >

            <ImageView
                android:id="@+id/advimage"
                android:layout_width="248dp"
                android:layout_height="106dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/advtsmt"
                />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/advimage"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/advimage"
                android:text="@string/t3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sitwhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titletext"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/advimage"
                android:text="@string/t3"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/searchedit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@id/sitwhere"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/advimage"
                android:text="" />

            <ImageButton
                android:id="@+id/searchbutton"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/sitwhere"
                android:layout_marginRight="2dp"
                android:layout_marginTop="11dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_grey" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>